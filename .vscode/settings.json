{
    "editor.rulers": [
        80,
        100
    ],
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.associations": {
        ".clang-tidy": "raw",
        "Makefile.*": "makefile",
        "*.mk": "makefile",
        "*.sketch": "cpp",
        "*.inc": "c",
        "cstdint": "c",
        "*.ipp": "cpp",
        "*.tcc": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "streambuf": "cpp",
        "core": "cpp",
        "__availability": "cpp",
        "compare": "c",
        "cstdlib": "c",
        "array": "c",
        "functional": "c",
        "tuple": "c",
        "type_traits": "c",
        "utility": "c",
        "variant": "c",
        "limits": "c",
        "hash_map": "c",
        "string_view": "c",
        "format": "c",
        "initializer_list": "c",
        "span": "c",
        "valarray": "c",
        "bitset": "c",
        "ranges": "c"
    },
    "[shellscript][c][cpp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[makefile]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "cmake.ignoreCMakeListsMissing": true,
}
