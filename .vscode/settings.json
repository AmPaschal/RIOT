{
    "editor.rulers": [
        80,
        100
    ],
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.associations": {
        "Makefile.*": "makefile",
        "*.mk": "makefile",
        "*.sketch": "cpp",
        "array": "c",
        "string": "c",
        "string_view": "c",
        "cassert": "c",
        "assert.h": "c",
        "hash_map": "c",
        "hash_set": "c",
        "initializer_list": "c",
        "utility": "c",
        "stdlib.h": "c",
        "rb.h": "c",
        "hdr.h": "c"
    },
    "[shellscript][c][cpp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[makefile]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
}
