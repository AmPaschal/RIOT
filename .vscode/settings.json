{
    "editor.rulers": [
        80,
        100
    ],
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.associations": {
        ".clang-tidy": "raw",
        "Makefile.*": "makefile",
        "*.mk": "makefile",
        "*.sketch": "cpp",
        "cstdlib": "c"
    },
    "[shellscript][c][cpp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[makefile]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "cmake.ignoreCMakeListsMissing": true,
}
